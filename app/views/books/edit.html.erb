<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error-box">
    <div class="error-message">
      <%= @book.errors.count  %>
        <% if @book.errors.count >= 2 %>
          errors
        <% else %>
          error
        <% end %>
      prohibited this book from being saved:
    </div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<% if @book.errors.any? %>
  <%= form_with model: @book do |f| %>
    <% if params[:book][:title].blank? %>
      <div class="field error-field">
        <label class="form-text error-form-text">Title</label>
        <div class="error-text-field"><%= f.text_field :title %></div>
      </div>
    <% else %>
      <div class="field">
        <label class="form-text">Title</label>
        <%= f.text_field :title %>
      </div>
    <% end %>

    <% if params[:book][:body].blank? %>
      <div class="field error-field">
        <label class="form-text error-form-text">Body</label>
        <div class="error-text-field"><%= f.text_area :body %></div>
      </div>
    <% else %>
      <div class="field">
        <label class="form-text">Body</label>
        <%= f.text_area :body %>
      </div>
    <% end %>
    
      <div class="actions">
        <%= f.submit 'Update Book' %>
      </div>
      
  <% end %>

<% else %>

  <%= form_with model: @book do |f| %>
    <div class="field">
      <label class="form_text">Title</label>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <label class="form_text">Body</label>
      <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>

<% end %>

<span>
  <%= link_to "Show", book_path(@book.id) %>
</span>
|
<span>
  <%= link_to "Back", '/books' %>
</span>